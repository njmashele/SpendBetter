@{
    ViewData["Title"] = "Create /  Edit";
}

@model SpendBetter.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or edit an expense</h1>
</div>

<form>
    <label>Id</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Id"/>

    <label>Value R</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Value" step="0.01"/>

    <label>Description</label>
    <input class="form-control" type="text" placeholder="0" asp-for="Description" />

    <button class="btn btn alert-primary mt-4" type="submit">Submit</button>

</form>